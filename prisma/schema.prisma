generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum State {
  ON
  OFF
}

model Device {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  code      String   @unique
  name      String
  location  String
  state     State
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("device")
}
